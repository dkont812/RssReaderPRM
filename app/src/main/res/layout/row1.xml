<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/cardViewAdapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


    >
        <ImageView
                android:id="@+id/imageOfNews"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:src="@drawable/ic_refresh"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"


        />

        <TextView
                android:id="@+id/txtTitle"
                android:textSize="18sp"
                android:text="Title"
                app:layout_constraintTop_toBottomOf="@id/imageOfNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


        />
        <TextView
                android:id="@+id/txtPubdate"
                android:textSize="12sp"
                android:text="2019-05-10 12:30:00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/imageOfNews"
                app:layout_constraintTop_toBottomOf="@id/txtTitle"

        />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>